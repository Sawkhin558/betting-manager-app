<?xml version="1.0" encoding="UTF-8"?>
<suppressions xmlns="https://jeremylong.github.io/DependencyCheck/dependency-suppression.1.3.xsd">
    <!-- Suppress false positives or accepted risks -->
    
    <!-- Kotlin stdlib - common false positives -->
    <suppress>
        <notes><![CDATA[
        Kotlin standard library - false positives in security scans
        ]]></notes>
        <packageUrl regex="true">^pkg:maven/org\.jetbrains\.kotlin/.*@.*$</packageUrl>
        <cpe>cpe:/a:jetbrains:kotlin</cpe>
    </suppress>
    
    <!-- AndroidX libraries - generally safe -->
    <suppress>
        <notes><![CDATA[
        AndroidX libraries from Google - maintained and secure
        ]]></notes>
        <packageUrl regex="true">^pkg:maven/androidx\..*@.*$</packageUrl>
    </suppress>
    
    <!-- Google Material components -->
    <suppress>
        <notes><![CDATA[
        Google Material Design components - maintained by Google
        ]]></notes>
        <packageUrl regex="true">^pkg:maven/com\.google\.android\.material/.*@.*$</packageUrl>
    </suppress>
    
    <!-- Dagger/Hilt - dependency injection framework -->
    <suppress>
        <notes><![CDATA[
        Dagger/Hilt - dependency injection framework from Google
        ]]></notes>
        <packageUrl regex="true">^pkg:maven/com\.google\.dagger/.*@.*$</packageUrl>
        <packageUrl regex="true">^pkg:maven/com\.google\.dagger/hilt.*@.*$</packageUrl>
    </suppress>
    
    <!-- Coroutines - Kotlin async library -->
    <suppress>
        <notes><![CDATA[
        Kotlin Coroutines - official async library
        ]]></notes>
        <packageUrl regex="true">^pkg:maven/org\.jetbrains\.kotlinx/kotlinx-coroutines.*@.*$</packageUrl>
    </suppress>
    
    <!-- Coil - image loading library -->
    <suppress>
        <notes><![CDATA[
        Coil - modern image loading library for Android
        ]]></notes>
        <packageUrl regex="true">^pkg:maven/io\.coil-kt/.*@.*$</packageUrl>
    </suppress>
    
    <!-- Room database -->
    <suppress>
        <notes><![CDATA[
        Room persistence library - part of Android Jetpack
        ]]></notes>
        <packageUrl regex="true">^pkg:maven/androidx\.room/.*@.*$</packageUrl>
    </suppress>
    
    <!-- Serialization -->
    <suppress>
        <notes><![CDATA[
        Kotlin serialization library
        ]]></notes>
        <packageUrl regex="true">^pkg:maven/org\.jetbrains\.kotlinx/kotlinx-serialization.*@.*$</packageUrl>
    </suppress>
    
    <!-- Testing libraries -->
    <suppress>
        <notes><![CDATA[
        Testing libraries - only used in test environment
        ]]></notes>
        <packageUrl regex="true">^pkg:maven/.*junit.*@.*$</packageUrl>
        <packageUrl regex="true">^pkg:maven/.*mockk.*@.*$</packageUrl>
        <packageUrl regex="true">^pkg:maven/.*espresso.*@.*$</packageUrl>
        <vulnerabilityName regex="true">.*</vulnerabilityName>
    </suppress>
    
    <!-- Timber logging -->
    <suppress>
        <notes><![CDATA[
        Timber logging library - simple logging facade
        ]]></notes>
        <packageUrl regex="true">^pkg:maven/com\.jakewharton\.timber/.*@.*$</packageUrl>
    </suppress>
    
</suppressions>